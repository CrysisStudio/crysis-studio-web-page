---
import Title from '../components/Title.astro'
import Layout from '../layouts/Layout.astro'
import { STAFF } from '../data/staff.data.js'
---

<Layout title='Staff'>
  <main
    class='flex flex-col items-center lg:max-w-[60rem] sm:max-w-[37.5rem] w-full'
  >
    <Title>Staff</Title>
    <section class='flex flex-wrap gap-3 justify-center w-full px-4'>
      {
        STAFF.map((item) => (
          <div class='flex relative items-center justify-center lg:w-3/12 sm:w-5/12 max-w-xs w-full'>
            <img src={item.img} alt={item.name} class='w-full' />
          </div>
        ))
      }
    </section>
  </main>
</Layout>
