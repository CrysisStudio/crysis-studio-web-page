---
import Title from '../components/Title.astro'
import Layout from '../layouts/Layout.astro'
import { AFFILIATES } from '../data/affiliates.data'
import { MARCAS } from '../data/affiliates.data'
import { CREATORS } from '../data/affiliates.data'
---

<Layout title='Afiliados'>
  <main
    class='flex flex-col items-center gap-12 lg:max-w-full sm:max-w-[37.5rem] w-full animate-fade-up'
  >
    <Title>Afiliados</Title>
    <section class='flex flex-wrap justify-center gap-4 w-full px-4'>
      {
        AFFILIATES.map((item) => (
          <div class='flex relative items-center justify-center lg:w-3/12 sm:w-4/12 max-w-xs w-full'>
            <img
              src={item.img}
              alt={item.name}
              class='w-full hover:scale-105 ease-out duration-300'
            />
          </div>
        ))
      }
    </section>
    <div class='mt-20 flex flex-col w-full'>
      <Title>Marcas Afiliadas</Title>

      <section class='flex flex-wrap justify-center gap-4 w-full px-4'>
        {
          MARCAS.map((item) => (
            <div class='flex relative items-center justify-center lg:w-3/12 sm:w-5/12 max-w-xs w-full'>
              <img
                src={item.img}
                alt={item.name}
                class='w-full hover:scale-105 ease-out duration-300'
              />
            </div>
          ))
        }
      </section>
    </div>
    <Title>Creadores Afiliados</Title>
    <section class='flex flex-wrap justify-center gap-4 w-full px-4'>
      {
        CREATORS.map((item) => (
          <div class='flex relative items-center justify-center lg:w-3/12 sm:w-4/12 max-w-xs w-full'>
            <img
              src={item.img}
              alt={item.name}
              class='w-full hover:scale-105 ease-out duration-300'
            />
          </div>
        ))
      }
    </section>
  </main>
</Layout>
